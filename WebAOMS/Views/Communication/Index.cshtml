
@model WebAOMS.Models.NoticeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet" />*@

<div class="container p-4" style="max-width: 800px; background: white; border: 1px solid #ccc; box-shadow: 2px 2px 5px #aaa;">
    <h4 class="text-center fw-bold">PROVINCIAL INFORMATION MANAGEMENT OFFICE</h4>
    <hr />

    @using (Html.BeginForm())
    {
        <div class="mb-3">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Enter title" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Date)
            @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
          
            <div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
                <div class="k-w-">
                    @Html.LabelFor(m => m.To)
                    <input id="customers"  style="width:100%"/>
             
                </div>
            </div>

        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.From)
            @Html.TextBoxFor(m => m.From, new { @class = "form-control", placeholder = "From" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Subject)
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
        </div>

        <div class="mb-3">
            @Html.Label("Content")
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", id = "summernote" })
        </div>

        <div class="mb-3">
            @Html.Label("Signatory Name")
            @*@Html.DropDownListFor(m => m.SignatoryID, Model.SignatoryList, "-- Select Signatory --", new { @class = "form-select" })*@
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Save Changes</button>
        </div>
        <script>
            $(document).ready(function() {
                    $("#customers").kendoDropDownList({
                        dataTextField: "ContactName",
                        dataValueField: "CustomerID",
                        headerTemplate: '<div class="dropdown-header k-widget k-header">' +
                                '<span>Photo</span>' +
                                '<span>Contact info</span>' +
                            '</div>',
                        footerTemplate: 'Total #: instance.dataSource.total() # items found',
                        valueTemplate: '<span class="selected-value" style="background-image: url(\'../content/web/Customers/#:data.CustomerID#.jpg\')"></span><span>#:data.ContactName#</span>',
                        template: '<span class="k-state-default" style="background-image: url(\'../content/web/Customers/#:data.CustomerID#.jpg\')"></span>' +
                                  '<span class="k-state-default"><h3>#: data.ContactName #</h3><p>#: data.CompanyName #</p></span>',
                        dataSource: {
                            transport: {
                                read: {
                                    url: "https://demos.telerik.com/service/v2/core/Customers",
                                }
                            }
                        },
                        height: 400
                    });

                    var dropdownlist = $("#customers").data("kendoDropDownList");
                });
        </script>
       
    }
</div>

