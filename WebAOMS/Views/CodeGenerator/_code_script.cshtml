@using System.Data
@model DataSet

@{
    
    Layout = null;
}

    @foreach (DataRow row in Model.Tables[0].Rows)
    {
        //var colname = Model.Tables[0].Columns;
        foreach (DataColumn col in Model.Tables[0].Columns)
        {
            <div class="col-md-6">

                <div class="box">
                    <div class="box-head" style="border-bottom:1px solid #e8e8e8">
                        <header>
                            <h4 class="text-bold">@col.ColumnName</h4>
                        </header>
                        <div class="tools">
                            <div class="btn-group ">
                                <a class="btn btn-equal btn-sm btn-refresh"><i class="fa fa-refresh"></i></a>
                                <a class="btn btn-equal btn-sm btn-collapse"><i class="fa fa-angle-down"></i></a>
                                <a class="btn btn-equal btn-sm btn-close"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div style="padding-top:5px">
                            <textarea readonly class="form-control col-md-12"  rows="12" style="background-color:#ffffff">@row[col.ColumnName]
                            </textarea>
                        </div>
                        
                    </div>
                </div>
            </div>

        }
    }

