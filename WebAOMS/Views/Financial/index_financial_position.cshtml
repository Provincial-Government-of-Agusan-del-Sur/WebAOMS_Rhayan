
@{
    ViewBag.Title = "Financial Report";
    ViewBag.Title_mini = "Financial Position Criteria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media (min-width: 768px) {
        .modal-xl {
            width: 90%;
            max-width: 1200px;
        }
    }
</style>

<div class="box">
    <div class="box-head">
        <header>
            <h4 class="text-bold">@ViewBag.Title_mini</h4>
        </header>
        <div class="tools">
            <div class="btn-group ">
                <a class="btn btn-equal btn-sm btn-refresh"><i class="fa fa-refresh"></i></a>
                <a class="btn btn-equal btn-sm btn-collapse"><i class="fa fa-angle-down"></i></a>
            </div>
        </div>
        <hr />
    </div>
    <div class="box-body">
        <div class="col-md-12">
            <div class="row">

                <div class="box-body no-padding" style="min-width:350px!important">
                    <div class="form-group-md">
                        <div class="col-md-4">
                            <div class="box-head no-padding">
                                <h5 class="text-light">Select <strong>Fundtype</strong></h5>
                            </div>
                            @(Html.Kendo().DropDownList()
                              .Name("dp_fundtype")
                              .DataTextField("FundName")
                              .DataValueField("FundID")
                              .DataSource(source =>
                              {
                                  source.Read(read =>
                                  {
                                      read.Action("DataSource_Getfundtype", "Journals");
                                  });
                              })
                              .HtmlAttributes(new { style = "width: 100%" })
                            )
                        </div>

                        <div class="col-md-3">
                            <div class="box-head no-padding">
                                <h5 class="text-light">Select <strong>Date</strong></h5>
                            </div>
                            @(Html.Kendo().DatePicker()
                            .Name("dtp_to")
                            .Format("MMMM dd, yyyy")
                            .Value(DateTime.Now)
                            .HtmlAttributes(new { type = "text" })
                            )
                        </div>
                        <div class="col-md-3">
                            <div class="box-head no-padding">
                                <h5 class="text-light"><strong>Detailed</strong></h5>
                            </div>
                            <div data-toggle="buttons">
                                <label id="lblcheck_post_closing" class="btn checkbox-inline btn-checkbox-primary-inverse">
                                    <input id="chck_post_closing" type="checkbox">Yes
                                </label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="box-head no-padding">
                                @*<h5 class="text-light">Select <strong>Date</strong></h5>*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group-md">
                        <div class="col-md-12" style="padding-bottom:10px;padding-top:10px!important">
                            <button onclick="print_financial_position()" class="btn btn-default"> <i class="fa fa-print"></i> Print Preview</button>
                        </div>
                        
                    </div>
                   
                </div>

            </div>
        </div>
        <hr />

    </div>
</div>
<script>
    var isPreClosing = 0;
    function print_financial_position() {
        var to = kendo.toString($('#dtp_to').data('kendoDatePicker').value(), 'MM/dd/yyyy').toString();
        var fundid = $("#dp_fundtype").data("kendoDropDownList").value();

        startSpin()
        $.post('@Url.Content("~/Financial/print_financial_position")', { fundid: fundid, to: to, IsPreClosing: isPreClosing }
            , function (r) {
                stopSpin()
            })
    }

    $(function () {
        $('#chck_post_closing').change(function () {
            if ($('#chck_post_closing').is(':checked')) {
                isPreClosing = 1
            }
            else {
                isPreClosing = 0
            }
        })
    })


</script>

