    <ul id="menuNav" class="main-menu">
        @{
            if (Request.IsAuthenticated == true)
            {
                if (WebAOMS.Base.USERMENU.items == null)
                {
                    return;
                }
                var menu = WebAOMS.Base.USERMENU.items.Where(M => M.parent_id == 0).OrderBy(M => M.Ordering);


                foreach (var rw in menu)
                {
                    int? parentid = rw.menu_id;
                    string strmenu_id;
                    strmenu_id = "a" + rw.menu_id.ToString();
                    var menuitem = WebAOMS.Base.USERMENU.items.Where(M => M.parent_id == parentid).OrderBy(M => M.Ordering).ToList();
                    <li>

                        @if (rw.Actions == "none")
                    {
                            <a id="@strmenu_id" href="#"><i class="@rw.IconName"></i><span class="title">@rw.MenuName</span> <span class="expand-sign">+</span></a>
                        }
                        else
                        {
                            <a id="@strmenu_id" href="@Url.Action(rw.Actions, rw.Controller)"> <i class="@rw.IconName"></i><span class="title">@rw.MenuName</span></a>
                        }
                        @if (menuitem.Count > 0)
                    {
                            <ul>
                                @foreach (var item in menuitem)
                                {
                                    strmenu_id = "a" + item.menu_id.ToString();

                                    if (item.menu_id > 0)
                                    {
                                        <li><a id="@strmenu_id" href="@Url.Action(item.Actions, item.Controller)">@item.MenuName</a></li>
                                    }
                                }
                            </ul>
                        }
                    </li>
                }

            }
            else
            {
                if (WebAOMS.Base.USERMENU_public.items == null)
                {
                    return;
                }
                var menu = WebAOMS.Base.USERMENU_public.items.Where(M => M.parent_id == 0).OrderBy(M => M.Ordering);
                foreach (var rw in menu)
                {
                    int? parentid = rw.menu_id;
                    string strmenu_id;
                    strmenu_id = "a" + rw.menu_id.ToString();
                    var menuitem = WebAOMS.Base.USERMENU_public.items.Where(M => M.parent_id == parentid).OrderBy(M => M.Ordering).ToList();
                    <li>

                        @if (rw.Actions == "none")
                    {
                            <a id="@strmenu_id" href="#"><i class="@rw.IconName"></i><span class="title">@rw.MenuName</span> <span class="expand-sign">+</span></a>
                        }
                        else
                        {
                            <a id="@strmenu_id" href="@Url.Action(rw.Actions, rw.Controller)"> <i class="@rw.IconName"></i><span class="title">@rw.MenuName</span></a>
                        }
                        @if (menuitem.Count > 0)
                    {
                            <ul>
                                @foreach (var item in menuitem)
                                {
                                    strmenu_id = "a" + item.menu_id.ToString();

                                    if (item.menu_id > 0)
                                    {
                                        <li><a id="@strmenu_id" href="@Url.Action(item.Actions, item.Controller)">@item.MenuName</a></li>
                                    }
                                }
                            </ul>
                        }
                    </li>
                }
            }

        }
    </ul>
</div>
<script>
        $("#@ViewBag.menuid").addClass("active");
</script>
