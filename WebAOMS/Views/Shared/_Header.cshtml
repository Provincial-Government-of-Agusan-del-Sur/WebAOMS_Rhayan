@using WebAOMS.Models;
@{

    var claimsIdentity = User.Identity as System.Security.Claims.ClaimsIdentity;
    var displayUserIDClaim = claimsIdentity != null
        ? claimsIdentity.Claims.SingleOrDefault(x => x.Type == ApplicationUser.UserIDClaimType)
        : null;
    if (displayUserIDClaim != null)
    {
        if (File.Exists(Server.MapPath(Url.Content("~/Content/UserImage/50x50/") + displayUserIDClaim.Value + ".png")) == true)
        {
            ViewBag.pictureLocaltion = Url.Content("~/Content/UserImage/50x50/") + displayUserIDClaim.Value + ".png?" + DateTime.Now.ToString(@"dd\hh\mm\ss");
        }
        else
        {
            ViewBag.pictureLocaltion = Url.Content("~/Content/UserImage/50x50/NoPicture.png?");
        }

    }


}
