
@{
    ViewBag.Title = "Log In";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>   
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="your,keywords">
    <meta name="description" content="Short explanation about this website">
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />

    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/akot/2018.1.1/akot.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/akot/2018.1.1/akot_responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome-4.2.0/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/akot/jquery-1.11.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/akot/jquery-migrate-1.2.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    @*<script src="~/Scripts/MicrosoftMvcJQueryValidation.js"></script>*@
    <style>
        
        /*toast*/
        .aui-toast {
            background: rgba(0, 0, 0, 0.7);
            text-align: center;
            border-radius: 0.25rem;
            color: #ffffff;
            position: fixed;
            z-index: 1002;
            top: 45%;
            left: 50%;
            width: 9.5em;
            min-height: 6em;
            display: none;
        }

            .aui-toast .aui-iconfont {
                margin-top: 0.2rem;
                display: block;
                font-size: 2.6rem;
            }

        .aui-toast-content {
            margin: 0 0 0.75rem;
        }

        .bg-co {
            content: '';
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.3);
        }

        .aui-toast-loading {
            background-color: #ffffff;
            border-radius: 100%;
            margin: 0.75rem 0;
            -webkit-animation-fill-mode: both;
            animation-fill-mode: both;
            border: 2px solid #ffffff;
            border-bottom-color: transparent;
            height: 4.25rem;
            width: 4.25rem;
            background: transparent !important;
            display: inline-block;
            -webkit-animation: rotate 1s 0s linear infinite;
            animation: rotate 1s 0s linear infinite;
        }

        @@keyframes rotate {
            0% {
                -webkit-transform: rotate(0deg) scale(1);
                transform: rotate(0deg) scale(1);
            }

            50% {
                -webkit-transform: rotate(180deg) scale(1);
                transform: rotate(180deg) scale(1);
            }

            100% {
                -webkit-transform: rotate(360deg) scale(1);
                transform: rotate(360deg) scale(1);
            }
        }

        @@-webkit-keyframes rotate {
            0% {
                -webkit-transform: rotate(0deg) scale(1);
                transform: rotate(0deg) scale(1);
            }

            50% {
                -webkit-transform: rotate(180deg) scale(1);
                transform: rotate(180deg) scale(1);
            }

            100% {
                -webkit-transform: rotate(360deg) scale(1);
                transform: rotate(360deg) scale(1);
            }
        }
    </style>

</head>
<body class="body-dark">
    <div class="box-type-login" >
        @RenderBody()
    </div>
    <script>
    var spinner;
    function startSpin() {
        $("#loadercenter").show()
    }

    function stopSpin() {
        $("#loadercenter").hide()
    }
    </script>
    
        <div id="loadercenter" class="aui-toast" style="display: none;margin-top: -48px;margin-left: -48px;">
            <div class="aui-toast-loading">
            </div>
            <div class="bg-co">
            </div>
            <div class="aui-toast-content" style="top:40px">Loading...</div>
        </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>

